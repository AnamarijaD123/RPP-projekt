<Window x:Class="PresentationLayer.Windows.LoginWithCredentials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer.Windows"
        mc:Ignorable="d"
        Title="LoginWithCredentials" Height="450" Width="800" Background="#7D6685">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="White" BorderBrush="Black" BorderThickness="1" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Source="\Images\user-login.png" Width="60" Height="60" HorizontalAlignment="Center" Margin="5" Grid.Row="0" Grid.ColumnSpan="2"/>

                <Label Content="Korisničko ime" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
                <Border CornerRadius="10" Background="White" BorderBrush="#7D6685" BorderThickness="1" Grid.Row="1" Grid.Column="1" Margin="5">
                    <TextBox Name="txtUsername" Background="Transparent" BorderThickness="0" Width="200" Height="25" Padding="5"/>
                </Border>

                <Label Content="Lozinka" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
                <Border CornerRadius="10" Background="White" BorderBrush="Gray" BorderThickness="1" Grid.Row="2" Grid.Column="1" Margin="5">
                    <PasswordBox Name="txtPassword" Background="Transparent" BorderThickness="0" Width="200" Height="25" Padding="5"/>
                </Border>

                <Label Visibility="Collapsed" HorizontalAlignment="Center" Grid.Row="3" Grid.ColumnSpan="2" x:Name="lblErrorMessage" Foreground="red" Content="Poruka greške"></Label>
                
                <Button Foreground="White" Name="btnLogin" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Prijavi se" Width="100" Height="35" Margin="10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="14" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#B392AC"/>
                            <Setter Property="BorderBrush" Value="#8a7084"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Padding" Value="5"/>
                            <Style.Triggers>
                                <!-- Hover efekat -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8a7084"/>
                                </Trigger>
                                <!-- Efekat prilikom klika -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#735D78"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button
                    x:Name="btnCancel"
                    BorderBrush="Transparent"
                    Foreground="Gray" HorizontalAlignment="Center" 
                        Background="Transparent" VerticalAlignment="Center" Grid.Row="5" Grid.ColumnSpan="2" Content="Odustani" Click="btnCancel_Click"></Button>
            </Grid>
        </Border>
    </Grid>
</Window>