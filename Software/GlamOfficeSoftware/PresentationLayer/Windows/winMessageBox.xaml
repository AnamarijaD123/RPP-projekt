<Window x:Class="PresentationLayer.Windows.winMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer.Windows"
        mc:Ignorable="d"
        Title="winMessageBox" Height="250" Width="500">
    <Border BorderBrush="#745c7c" Background="#b894ac">
        <DockPanel>
            <!-- Buttons -->
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
                <Button x:Name="btnYes" Content="Yes" Width="70" Click="btnYes_Click" Style="{StaticResource classicButton}" Background="#f5f5f5" Foreground="Black"/>
                <Button x:Name="btnNo" Content="No" Width="70" Height="40" Margin="7,0,10,0" Click="btnNo_Click" Style="{StaticResource deleteButton}" Background="#d02c2c"/>
            </StackPanel>

            <!-- Content -->
            <TextBlock x:Name="txtMessage" Text="Are you sure you want to proceed?" FontSize="16" TextWrapping="Wrap" Margin="10" />
        </DockPanel>
    </Border>
</Window>
