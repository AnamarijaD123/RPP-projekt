<UserControl x:Class="PresentationLayer.UserControls.ucClientAdministration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Background="#f5f5f5">
        <DockPanel Margin="30,0,30,30" >
            <TextBlock Text="Client administration" Style="{StaticResource titleText}" Margin="10" DockPanel.Dock="Top"/>
            <StackPanel DockPanel.Dock="Bottom">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Search clients:" Margin="0, 5" />
                    <TextBlock Text="Filters:" Margin="140,5,0,0" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    
                    <!--polje za unos po filtru-->
                    <Border BorderThickness="1" BorderBrush="#acb0af"  CornerRadius="20"  Background="#ffffff">
                        <Grid Margin="7 9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="textSearch" Width="180" MouseDown="textSearch_MouseDown" Style="{StaticResource placeholder}"/>
                            <TextBox x:Name="txtSearch" Width="180" TextChanged="txtSearch_TextChanged" Style="{StaticResource textBox}"/>
                        </Grid>
                    </Border>

                    <!-- cmb za odabir načina pretraživanja -->
                    <Border BorderThickness="1" Width="190" BorderBrush="#acb0af" CornerRadius="20" Height="40" Background="#b894ac" Margin="7,0" HorizontalAlignment="Left">
                        <Grid Margin="7 9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="cmbFilters" Grid.Column="0" Width="150" SelectionChanged="cmbFilters_SelectionChanged" HorizontalAlignment="Left" Height="30" Style="{StaticResource combobox}" VerticalAlignment="Center" />
                            <Button x:Name="btnDropdown" Grid.Column="1" Click="btnDropdown_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Image Source="/Images/dropdown-arrow.png" Width="20" />
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
            <DataGrid x:Name="dgvClients" />
        </DockPanel>        
    </Grid>
</UserControl>
