<UserControl x:Class="PresentationLayer.UserControls.ucShowEmployeeDetailsSideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="240">
    <Grid>
        <Border Width="240" DockPanel.Dock="Right" Background="#b894ac">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Button x:Name="btnCloseSidebar" Style="{StaticResource btnMRC}" Click="btnCloseSidebar_Click" HorizontalAlignment="Right">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Source="/Images/close-circle.png" Width="50" Height="30"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" VerticalAlignment="Top" Margin="5,5,5,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>


                        <StackPanel Grid.Row="0" Background="#f0dcdc">
                            <TextBlock Text="PIN:" HorizontalAlignment="Left" Margin="20,7,0,7"/>
                            <Border Grid.Row="1" BorderThickness="1" BorderBrush="#acb0af" CornerRadius="20" Background="#ffffff" Margin="20,0,5,7">
                                <TextBlock x:Name="txtPIN"  Margin="10,5"/>
                            </Border>
                        </StackPanel>


                        <TextBlock Text="Firstname:" Grid.Row="2" Margin="20,7,0,0"/>
                        <Border Grid.Row="3" BorderThickness="1" BorderBrush="#acb0af" CornerRadius="20" Background="#ffffff" Margin="20,0,5,7">
                            <TextBlock x:Name="txtFirstname"  Margin="10,5"/>
                        </Border>


                        <StackPanel Grid.Row="4" Background="#f0dcdc">
                            <TextBlock Text="Lastname:" HorizontalAlignment="Left" Margin="20,7,0,7"/>
                            <Border Grid.Row="5" BorderThickness="1" BorderBrush="#acb0af" CornerRadius="20" Background="#ffffff" Margin="20,0,5,7">
                                <TextBlock x:Name="txtLastname"  Margin="10,5"/>
                            </Border>
                        </StackPanel>

                        <TextBlock Text="E-mail:" Grid.Row="6" Margin="20,7,0,0"/>
                        <Border Grid.Row="7" BorderThickness="1" BorderBrush="#acb0af" CornerRadius="20" Background="#ffffff" Margin="20,0,5,7">
                            <TextBlock x:Name="txtEmail" Margin="10,5"/>
                        </Border>


                        <StackPanel Grid.Row="8" Background="#f0dcdc">
                            <TextBlock Text="Username:" HorizontalAlignment="Left" Margin="20,7,0,7"/>
                            <Border Grid.Row="9" BorderThickness="1" BorderBrush="#acb0af" CornerRadius="20" Background="#ffffff" Margin="20,0,5,7">
                                <TextBlock x:Name="txtUsername"  Margin="10,5"/>
                            </Border>
                        </StackPanel>


                        <TextBlock Text="Password:" Grid.Row="10" Margin="20,7,0,0"/>
                        <Border Grid.Row="11" BorderThickness="1" BorderBrush="#acb0af" CornerRadius="20" Background="#ffffff" Margin="20,0,5,7">
                            <TextBlock x:Name="txtPassword"  Margin="10,5"/>
                        </Border>


                        <StackPanel Grid.Row="12" Background="#f0dcdc">
                            <TextBlock Text="Salt:" HorizontalAlignment="Left" Margin="20,7,0,7"/>
                            <Border Grid.Row="13" BorderThickness="1" BorderBrush="#acb0af" CornerRadius="20" Background="#ffffff" Margin="20,0,5,7">
                                <TextBlock x:Name="txtSalt"  Margin="10,5"/>
                            </Border>
                        </StackPanel>


                        <TextBlock Text="Phone number:" Grid.Row="14" Margin="20,7,0,0"/>
                        <Border Grid.Row="15" BorderThickness="1" BorderBrush="#acb0af" CornerRadius="20" Background="#ffffff" Margin="20,0,5,7">
                            <TextBlock x:Name="txtPhoneNumber"  Margin="10,5"/>
                        </Border>


                        <StackPanel Grid.Row="16" Background="#f0dcdc">
                            <TextBlock Text="Role:" HorizontalAlignment="Left" Margin="20,7,0,7"/>
                            <Border Grid.Row="17" BorderThickness="1" BorderBrush="#acb0af" CornerRadius="20" Background="#ffffff" Margin="20,0,5,7">
                                <TextBlock x:Name="txtRole"   Background="White" Foreground="#acb0af" Margin="10,5"/>
                            </Border>
                        </StackPanel>


                        <TextBlock Text="Work Position:" Grid.Row="18" Margin="20,7,0,0"/>
                        <Border Grid.Row="19" BorderThickness="1" BorderBrush="#acb0af" CornerRadius="20" Background="#ffffff" Margin="20,0,5,7">
                            <TextBlock x:Name="txtWorkPosition"  Foreground="#acb0af" Background="White" Margin="10,5">

                            </TextBlock>
                        </Border>
                        <TextBlock HorizontalAlignment="Center" Text="QR Kod:" Grid.Row="20" Margin="20,7,0,0"/>
                        <Border Grid.Row="21" BorderThickness="0.6" BorderBrush="Black" Margin="20,5,5,7">
                            <Image x:Name="imgQRCode" Width="150" Height="150"/>
                        </Border>


                        <StackPanel Grid.Row="22" Orientation="Vertical" HorizontalAlignment="Center" Margin="20,5,5,7">
                            <Button Height="30" Style="{StaticResource classicButton}" Background="#f5f5f5" Foreground="Black"  Click="btnGenerateQR_Click" x:Name="btnGenerateQR" Content="Generiraj QR"  Width="120" Margin="5"/>
                            <Button Height="30" Style="{StaticResource classicButton}" Background="#f5f5f5" Foreground="Black"  x:Name="btnDownloadQR" Content="Preuzmi QR" Click="btnDownloadQR_Click" Width="120" Margin="5"/>
                        </StackPanel>

                    </Grid>
                </ScrollViewer>

                <Grid Grid.Row="2">
                    <StackPanel Orientation="Vertical" Margin="0,15,0,15">
                      
                        <Button x:Name="btnEdit" Click="btnEdit_Click" FontWeight="SemiBold" Height="40" Content="Edit" Style="{StaticResource classicButton}" Background="#f5f5f5" Foreground="Black" Margin="15,0,15,7" />
                        <Button x:Name="btnDelete" Click="btnDelete_Click" FontWeight="SemiBold" Height="40" Content="Delete" Style="{StaticResource deleteButton}" Background="#d02c2c" Margin="15,0,15,0" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
