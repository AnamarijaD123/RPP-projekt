<UserControl x:Class="PresentationLayer.UserControls.ucTreatmentManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <Storyboard x:Key="SlideInAnimation">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <EasingThicknessKeyFrame KeyTime="0" Value="0,0,240,0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:0.5" Value="0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="SlideOutAnimation">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <EasingThicknessKeyFrame KeyTime="0" Value="0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:0.5" Value="240,0,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>

    <Grid Background="#f5f5f5">
        <DockPanel Margin="30,0,30,15">
            <!-- naslov -->
            <TextBlock x:Name="txtTitle" Text="Treatments" Style="{StaticResource titleText}" Margin="10" DockPanel.Dock="Top" />


            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left">

                <StackPanel Orientation="Horizontal">

                    <StackPanel>
                        <TextBlock Text="Search treatments:" Margin="0, 5" />
                        <Border BorderThickness="1" BorderBrush="#acb0af" CornerRadius="20" Background="#ffffff" HorizontalAlignment="Left">
                            <Grid Margin="7 9">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="textSearch" Width="150" Style="{StaticResource placeholder}" Margin="7,0,0,0" />
                                <TextBox x:Name="txtSearch" Width="160" Style="{StaticResource textBox}" />
                            </Grid>
                        </Border>
                    </StackPanel>


                    <StackPanel>
                        <TextBlock Text="Filters:" Margin="7,5" />
                        <Border BorderThickness="1" Width="190" BorderBrush="#acb0af" CornerRadius="20" Height="40" Background="#b894ac" Margin="7,0" HorizontalAlignment="Left">
                            <Grid Margin="7 9">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="cmbFilters" Grid.Column="0" Width="140" HorizontalAlignment="Left" Height="30" Style="{StaticResource combobox}" VerticalAlignment="Center" Margin="7,0,0,0" />
                                <Button x:Name="btnDropdown" Grid.Column="1" Click="btnDropdown_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Image Source="/Images/dropdown-arrow.png" Width="20" />
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Sorting:" Margin="7,5" />
                        <Border BorderThickness="1" Width="190" BorderBrush="#acb0af" CornerRadius="20" Height="40" Background="#b894ac" Margin="7,0" HorizontalAlignment="Left">
                            <Grid Margin="7 9">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="cmbSorting" Grid.Column="0" Width="140" HorizontalAlignment="Left" Height="30" Style="{StaticResource combobox}" VerticalAlignment="Center" Margin="7,0,0,0" />
                                <Button x:Name="btnDropdownSorting" Grid.Column="1" Click="btnDropdownSorting_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Image Source="/Images/dropdown-arrow.png" Width="20" />
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Gumbovi -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Margin="0,0,0,-66" HorizontalAlignment="Right" >
                <Button x:Name="btnShowTreatmentInfo" FontWeight="SemiBold" Content="Show" Width="100" Style="{StaticResource classicButton}" Height="40" Margin="0, 0, 7, 0"/>
                <Button x:Name="btnAddTreatment" FontWeight="SemiBold" Content="Add" Width="100" Style="{StaticResource classicButton}" Height="40"/>
            </StackPanel>


            <ContentControl x:Name="ccSidebar" Width="240" DockPanel.Dock="Right" Margin="0,-54.55,-30,-81" Panel.ZIndex="2" />


            <Grid Margin="0,0,-210,0">
                <DataGrid x:Name="dgvTreatments" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,0,10" DockPanel.Dock="Top">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding idTreatment}" Width="50" IsReadOnly="True" />
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100" />
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200" />
                        <DataGridTextColumn Header="Duration (min)" Binding="{Binding DurationMinutes}" Width="120" />
                        <DataGridTextColumn Header="Group ID" Binding="{Binding TreatmentGroup_idTreatmentGroup}" Width="100" />
                        <DataGridTextColumn Header="Work Position ID" Binding="{Binding WorkPosition_idWorkPosition}" Width="120" />
                    </DataGrid.Columns>
                </DataGrid>
                <!-- Indikator učitavanja -->
                <TextBlock x:Name="loadingIndicator" Text="Loading treatments, please wait..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="Gray" Visibility="Visible" />
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
