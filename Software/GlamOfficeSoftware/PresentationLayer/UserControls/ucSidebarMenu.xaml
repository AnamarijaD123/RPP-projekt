<UserControl x:Class="PresentationLayer.UserControls.ucSidebarMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="240">
    <Grid>
        <Border Width="240" DockPanel.Dock="Right" Background="#b894ac">
            <Grid>
                <DockPanel>
                    <Button x:Name="btnCloseSidebar" DockPanel.Dock="Top" Style="{StaticResource btnMRC}" Click="btnCloseSidebar_Click" HorizontalAlignment="Right">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Image Source="/Images/close-circle.png" Width="50" Height="30"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Margin="0,0,0,0">
                        <Button x:Name="btnDashboard" Style="{StaticResource SidebarButtonStyle}" Click="btnDashboard_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Media/Images/dashboard.png" Width="16" Height="16" Margin="5"/>
                                        <TextBlock Text="Dashboard" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button x:Name="btnClientAdministration" Style="{StaticResource SidebarButtonStyle}" Click="btnClientAdministration_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Media/Images/employee-administration.png" Width="16" Height="16" Margin="5"/>
                                        <TextBlock Text="Clients" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button x:Name="btnEmployees" Style="{StaticResource SidebarButtonStyle}" Click="btnEmployees_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Media/Images/employee-administration.png" Width="16" Height="16" Margin="5"/>
                                        <TextBlock Text="Employees" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button x:Name="btnReservations" Style="{StaticResource SidebarButtonStyle}" Click="btnReservations_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Media/Images/employee-administration.png" Width="16" Height="16" Margin="5"/>
                                        <TextBlock Text="Reservations" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button x:Name="btnReceipts" Style="{StaticResource SidebarButtonStyle}" Click="btnReceipts_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Media/Images/employee-administration.png" Width="16" Height="16" Margin="5"/>
                                        <TextBlock Text="Receipts" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button x:Name="btnRewards" Style="{StaticResource SidebarButtonStyle}" Click="btnRewards_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Media/Images/employee-administration.png" Width="16" Height="16" Margin="5"/>
                                        <TextBlock Text="Rewards" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button x:Name="btnGiftCards" Style="{StaticResource SidebarButtonStyle}" Click="btnGiftCards_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Media/Images/employee-administration.png" Width="16" Height="16" Margin="5"/>
                                        <TextBlock Text="Gift cards" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button x:Name="btnPay" Style="{StaticResource SidebarButtonStyle}" Click="btnPay_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Media/Images/employee-administration.png" Width="16" Height="16" Margin="5"/>
                                        <TextBlock Text="Pay" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button x:Name="btnTreatmentManagement" Style="{StaticResource SidebarButtonStyle}" Click="btnTreatmentManagement_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Media/Images/employee-administration.png" Width="16" Height="16" Margin="5"/>
                                        <TextBlock Text="Treatments" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button x:Name="btnSchedule" Style="{StaticResource SidebarButtonStyle}" Click="btnSchedule_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Media/Images/employee-administration.png" Width="16" Height="16" Margin="5"/>
                                        <TextBlock Text="Schedule" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                        
                        <Button x:Name="btnLogout" Style="{StaticResource SidebarButtonStyle}" Click="btnLogout_Click">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Media/Images/log-out.png" Width="16" Height="16" Margin="5"/>
                                            <TextBlock Text="Logout" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                       
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
