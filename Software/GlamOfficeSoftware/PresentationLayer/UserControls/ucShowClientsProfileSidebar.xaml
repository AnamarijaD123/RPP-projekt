<UserControl x:Class="PresentationLayer.UserControls.ucShowClientsProfileSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="240" Loaded="UserControl_Loaded">
    <Grid>
        <Border Width="240" DockPanel.Dock="Right" Background="#b894ac">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Button x:Name="btnCloseSidebar" Style="{StaticResource btnMRC}" Click="btnCloseSidebar_Click" HorizontalAlignment="Right">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Source="/Images/close-circle.png" Width="50" Height="30"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- klijentove info -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" VerticalAlignment="Center" Margin="5,5,5,0">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <!-- Ime -->
                        <StackPanel Background="#f0dcdc" >
                            <TextBlock Text="Firstname: " Grid.Row="0"  HorizontalAlignment="Left" Margin="20,7,0,7" />
                            <TextBlock x:Name="textFirstname" Grid.Row="1"  HorizontalAlignment="Left" Margin="20,0,0,7" />
                        </StackPanel>
                        

                        <!-- Prezime -->
                        <TextBlock Text="Lastname: "  Grid.Row="2"  HorizontalAlignment="Left" Margin="20,7,0,7" />
                        <TextBlock x:Name="textLastname"  Grid.Row="3"  HorizontalAlignment="Left" Margin="20,0,0,7" />

                        <!-- Email -->
                        <StackPanel Grid.Row="4" Background="#f0dcdc">
                            <TextBlock Text="E-mail: "  Grid.Row="4" HorizontalAlignment="Left" Margin="20,7,0,7" />
                            <TextBlock x:Name="textEmail"  Grid.Row="5" HorizontalAlignment="Left" Margin="20,0,0,7" TextWrapping="Wrap" VerticalAlignment="Center" />
                        </StackPanel>
                        

                        <!-- Tel. br. -->
                        <TextBlock Text="Phone number: "  Grid.Row="6"  HorizontalAlignment="Left" Margin="20,7,0,7" />
                        <TextBlock x:Name="textPhoneNumber"  Grid.Row="7"  HorizontalAlignment="Left" Margin="20,0,0,7" />

                        <!-- Reward points -->
                        <StackPanel Grid.Row="8" Background="#f0dcdc" Orientation="Horizontal">
                            <TextBlock Text="Reward points: "  Grid.Row="8"  HorizontalAlignment="Left" Margin="20,7,0,7" />
                            <TextBlock x:Name="textRewardPoints"  Grid.Row="8"  HorizontalAlignment="Center" Margin="7,7,0,7" />
                        </StackPanel>

                        <!-- Gift card -->
                        <TextBlock Text="Gift card: "  Grid.Row="10"  HorizontalAlignment="Left" Margin="20,7,0,7" />
                        <TextBlock x:Name="textGiftCardDesc"  Grid.Row="11"  HorizontalAlignment="Left" Margin="20,0,0,7" TextWrapping="Wrap" VerticalAlignment="Center" />

                        <!-- Reservation -->
                        <StackPanel  Grid.Row="12" Background="#f0dcdc">
                            <TextBlock Text="Reservations: "  Grid.Row="12"  HorizontalAlignment="Left" Margin="20,7,0,7" />
                            <TextBlock x:Name="textReservationDates"  Grid.Row="13"  HorizontalAlignment="Left" Margin="20,0,0,7" TextWrapping="Wrap" VerticalAlignment="Center" />
                        </StackPanel>

                        <!-- Reviews -->
                        <TextBlock Text="Reviews: "  Grid.Row="14"  HorizontalAlignment="Left" Margin="20,7,7,7" />
                        <TextBlock x:Name="textReviewsComments"  Grid.Row="15"  HorizontalAlignment="Left" TextAlignment="Left" Margin="20,0,0,7" TextWrapping="Wrap" VerticalAlignment="Center" />
                    </Grid>
                </ScrollViewer>

                <!-- Buttons -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,15,0,15">
                        <Button x:Name="btnEditProfile" FontWeight="SemiBold" Height="40" Content="Edit" Style="{StaticResource classicButton}" Background="#f5f5f5" Foreground="Black" Margin="15,0,15,7" />
                        <Button x:Name="btnDeleteProfile" FontWeight="SemiBold" Height="40" Content="Delete" Style="{StaticResource deleteButton}" Background="#d02c2c" Margin="15,0,15,0" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
