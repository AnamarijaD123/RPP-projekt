<UserControl x:Class="PresentationLayer.UserControls.ucShowClientsProfileSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="240" Loaded="UserControl_Loaded">
    <Grid>
        <Border Width="240" DockPanel.Dock="Right" Background="#b894ac">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!-- Child informations -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <!-- Ime -->
                        <TextBlock Text="Firstname: " Grid.Column="0" Grid.Row="0"  HorizontalAlignment="Right" Margin="0,0,7,7" />
                        <TextBlock x:Name="textFirstname" Grid.Column="1" Grid.Row="0"  HorizontalAlignment="Left" Margin="7,0,0,7" />

                        <!-- Prezime -->
                        <TextBlock Text="Lastname: " Grid.Column="0" Grid.Row="1"  HorizontalAlignment="Right" Margin="0,0,7,7" />
                        <TextBlock x:Name="textLastname" Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Left" Margin="7,0,0,7" />

                        <!-- Email -->
                        <TextBlock Text="E-mail: " Grid.Column="0" Grid.Row="2"  HorizontalAlignment="Right" Margin="0,0,7,7" />
                        <TextBlock x:Name="textEmail" Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Left" Margin="7,0,0,7" TextAlignment="Left" VerticalAlignment="Center" />

                        <!-- Tel. br. -->
                        <TextBlock Text="Phone number: " Grid.Column="0" Grid.Row="3"  HorizontalAlignment="Right" Margin="0,0,7,7" />
                        <TextBlock x:Name="textPhoneNumber" Grid.Column="1" Grid.Row="3"  HorizontalAlignment="Left" Margin="7,0,0,7" />

                        <!-- Reward points -->
                        <TextBlock Text="Reward points: " Grid.Column="0" Grid.Row="4"  HorizontalAlignment="Right" Margin="0,0,7,7" />
                        <TextBlock x:Name="textRewardPoints" Grid.Column="1" Grid.Row="4"  HorizontalAlignment="Left" Margin="7,0,0,7" />

                        <!-- Gift card -->
                        <TextBlock Text="Gift card: " Grid.Column="0" Grid.Row="5"  HorizontalAlignment="Right" Margin="0,0,7,7" />
                        <TextBlock x:Name="textGiftCardDesc" Grid.Column="1" Grid.Row="5"  HorizontalAlignment="Left" Margin="7,0,0,7" />

                        <!-- Reservation -->
                        <TextBlock Text="Reservations: " Grid.Column="0" Grid.Row="6"  HorizontalAlignment="Right" Margin="0,0,7,7" />
                        <TextBlock x:Name="textReservationDates" Grid.Column="1" Grid.Row="6"  HorizontalAlignment="Left" Margin="7,0,0,7" />

                        <!-- Reviews -->
                        <TextBlock Text="Reviews: " Grid.Column="0" Grid.Row="7"  HorizontalAlignment="Right" Margin="0,0,7,7" />
                        <TextBlock x:Name="textReviewsComments" Grid.Column="1" Grid.Row="7"  HorizontalAlignment="Left" TextAlignment="Left" Margin="7,0,0,7" />
                    </Grid>
                </ScrollViewer>

                <!-- Buttons -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Row="0">
                        <Button x:Name="btnEditProfile" FontWeight="SemiBold" Height="40" Content="Edit" Style="{StaticResource classicButton}" Background="#f5f5f5" Foreground="Black" Margin="15,0,15,7" />
                        <Button x:Name="btnDeleteProfile" FontWeight="SemiBold" Height="40" Content="Delete" Style="{StaticResource deleteButton}" Background="#d02c2c" Margin="15,0,15,15" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
