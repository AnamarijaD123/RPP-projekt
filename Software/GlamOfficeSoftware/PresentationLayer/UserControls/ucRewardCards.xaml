<UserControl x:Class="PresentationLayer.UserControls.ucRewardCards"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             xmlns:converters="clr-namespace:PresentationLayer.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="225" d:DesignWidth="330">
    <UserControl.Resources>
        <converters:LoyaltyLevelToColorConverter x:Key="LoyaltyLevelToColorConverter"/>
    </UserControl.Resources>

    <Border Background="{Binding LoyaltyLevelName, Converter={StaticResource LoyaltyLevelToColorConverter}}" Height="195" Width="300" CornerRadius="10" Padding="10" BorderBrush="#ccc" BorderThickness="1" Margin="10">
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" />
            <TextBlock Text="{Binding Description}" FontSize="14" Margin="0,5,0,0" />
            <TextBlock Text="{Binding CostPoints}" FontSize="14" Foreground="#888" Margin="0,10,0,0" />
        </StackPanel>
    </Border>
</UserControl>
