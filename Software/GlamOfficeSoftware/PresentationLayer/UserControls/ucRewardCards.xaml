<UserControl x:Class="PresentationLayer.UserControls.ucRewardCards"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="220">
    <Border Background="DarkRed" Width="200" Height="130" CornerRadius="10" Padding="10" BorderBrush="#ccc" BorderThickness="1" Margin="10">
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" />
            <TextBlock Text="{Binding Description}" FontSize="14" Margin="0,5,0,0" />
            <TextBlock Text="{Binding CostPoints}" FontSize="14" Foreground="#888" Margin="0,10,0,0" />
        </StackPanel>
    </Border>
</UserControl>
