<UserControl x:Class="PresentationLayer.UserControls.ucMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Border BorderBrush="#745c7c" Background="#b894ac">
        <DockPanel>
            <!-- Header -->
            <DockPanel DockPanel.Dock="Top" Background="#745c7c" VerticalAlignment="Top" LastChildFill="False">
                <TextBlock x:Name="txtTitle" DockPanel.Dock="Left" Text="Message Box Title" Style="{StaticResource titleText}" 
                   Foreground="#f5f5f5" FontSize="12" VerticalAlignment="Center" Margin="2,0,0,0" />

                <Button x:Name="btnCloseMesageBox" DockPanel.Dock="Right" Height="20" Width="20" Style="{StaticResource btnMRC}" 
                Click="btnCloseMesageBox_Click" VerticalAlignment="Center" Margin="0,2,2,2">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Source="/Images/close-circle.png" />
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </DockPanel>

            <!-- Buttons -->
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,0,0,5" HorizontalAlignment="Center">
                <Button x:Name="btnYes" Content="Yes" Width="70" Click="btnYes_Click" Style="{StaticResource mbWhiteButton}" Background="#f5f5f5" Foreground="Black"/>
                <Button x:Name="btnNo" Content="No" Width="70" Height="25" Margin="7,0,10,0" Click="btnNo_Click" Style="{StaticResource mbRedButton}" Background="#d02c2c"/>
            </StackPanel>

            <!-- Content -->
            <TextBlock x:Name="txtMessage" Text="Are you sure you want to proceed?" FontSize="10" TextWrapping="Wrap" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </DockPanel>
    </Border>
</UserControl>
