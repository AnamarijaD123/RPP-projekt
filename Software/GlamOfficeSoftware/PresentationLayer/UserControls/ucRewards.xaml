<UserControl x:Class="PresentationLayer.UserControls.ucRewards"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="1250" d:DesignWidth="1000" Loaded="UserControl_Loaded">
    <Grid Background="#f5f5f5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,0,30,15">
                <TextBlock Text="Rewards" Style="{StaticResource titleText}" Margin="10" />

                <!-- Bronze Level -->
                <StackPanel Margin="0,20,0,20">
                    <TextBlock Text="Bronze Level" FontSize="20" FontWeight="Bold" Foreground="#444" Margin="0,10,0,5" />
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" Height="180">
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                            <ItemsControl ItemsSource="{Binding BronzeRewards}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:ucRewardCards />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>

                <!-- Silver Level -->
                <StackPanel Margin="0,20,0,20">
                    <TextBlock Text="Silver Level" FontSize="20" FontWeight="Bold" Foreground="#444" Margin="0,10,0,5" />
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" Height="150">
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                            <ItemsControl ItemsSource="{Binding SilverRewards}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:ucRewardCards />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>

                <!-- Gold Level -->
                <StackPanel Margin="0,20,0,20">
                    <TextBlock Text="Gold Level" FontSize="20" FontWeight="Bold" Foreground="#444" Margin="0,10,0,5" />
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" Height="150">
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                            <ItemsControl ItemsSource="{Binding GoldRewards}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:ucRewardCards />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>

                <!-- Platinum Level -->
                <StackPanel Margin="0,20,0,20">
                    <TextBlock Text="Platinum Level" FontSize="20" FontWeight="Bold" Foreground="#444" Margin="0,10,0,5" />
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" Height="150">
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                            <ItemsControl ItemsSource="{Binding PlatinumRewards}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:ucRewardCards />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>

                <!-- VIP Level -->
                <StackPanel Margin="0,20,0,20">
                    <TextBlock Text="VIP Level" FontSize="20" FontWeight="Bold" Foreground="#444" Margin="0,10,0,5" />
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" Height="150">
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                            <ItemsControl ItemsSource="{Binding VipRewards}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:ucRewardCards />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
