<Window x:Class="PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
        Title="Glam Office Software" Height="600" Width="1200">
    <Window.Resources>
        <Storyboard x:Key="SlideInAnimationProfile">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <EasingThicknessKeyFrame KeyTime="0" Value="400,0,0,0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:0.5" Value="0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="SlideOutAnimationProfile">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <EasingThicknessKeyFrame KeyTime="0" Value="0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:0.5" Value="400,0,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    
    <Grid>
        <DockPanel>
            <!-- Header -->
            <Border x:Name="borHeader" Background="#745c7c" Height="40" DockPanel.Dock="Top">
                <DockPanel VerticalAlignment="Center">
                    <!-- Naslov -->
                    <StackPanel Orientation="Horizontal"  DockPanel.Dock="Left" VerticalAlignment="Center" >
                        <Image Source="/Images/GlamOfficeIcon.ico" Width="40" Height="40"/>
                        <TextBlock Text="GlamOffice" FontWeight="SemiBold" Foreground="#f5f5f5" DockPanel.Dock="Left" FontSize="20" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button x:Name="btnMenu" DockPanel.Dock="Right" VerticalAlignment="Top" HorizontalAlignment="Right" Style="{StaticResource btnMRC}">
                        <Image Source="/Images/hamburger-menu.png" Width="50" Height="30" />
                    </Button>
                </DockPanel>
            </Border>


            <!-- Navigation Bar -->
            <ContentControl x:Name="ccSidebar" Width="240" DockPanel.Dock="Right" Margin="0,-40,0,0" />

            <!-- Prostor za sadržaj -->
            <ContentControl x:Name="contentControl" />
        </DockPanel>
    </Grid>
</Window>
